<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/ge_splash_"
        android:layout_centerInParent="true"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="se non si ha la matricola, lasciare in bianco e premere OK"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="570dp"
        android:gravity="center">

    </TextView>



    <EditText
        android:id="@+id/editTextCont"
        android:cursorVisible="true"
        android:textColor="#4f9e33"
        android:hint="matricola contatore"
        android:focusable="true"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="370dp"
        android:gravity="center"
        android:ems="10"
        android:visibility="visible"
        tools:visibility="visible"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:inputType="numberDecimal" />


    <Button
        android:id="@+id/button_ok_cont"
        android:layout_width="151dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="174dp"
        android:alpha="0.8"
        android:background="#4f9e33"
        android:gravity="center"
        android:text="@android:string/ok"
        android:textColor="#FFF" />



</RelativeLayout>
